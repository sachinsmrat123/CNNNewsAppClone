<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.cnn_news_app">

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET"/>
    <application
        android:allowBackup="true"
        android:name=".MyApplication"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.CNN_news_app">
        <activity android:name=".Activity.DetailedNews" />
        <activity android:name=".firebaseAuth.SignUpActivity" />
        <activity android:name=".firebaseAuth.LoginActivity" />
        <activity android:name=".liveTv.activity.liveTvActivity" />
        <activity android:name=".Activity.SearchedDetailsActivity" />
        <activity android:name=".Activity.AlertsThatMatter" />
        <activity android:name=".Activity.SelectNewsFeed" />
        <activity android:name=".MainActivity" />
        <activity android:name=".Activity.SlaphScreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>